<h1>Bookings</h1>

<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
			<th>Organisasi</th>
      <th>Unit</th>
      <th>Paket</th>
      <th>Tgl Mulai</th>
      <th>Tgl Akhir</th>
      <th>Peserta</th>
      <th>Status</th>
      <th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.organization %></td>
		  <% customer.bookings.each do |booking| %>
			<td><%= booking.unit %></td>
			<td><%= booking.packet %></td>
      <td><%= booking.start_date %></td>
      <td><%= booking.end_date %></td>
      <td><%= booking.total_participant %></td>
			<td><%= booking.status %></td>

      <td><%= link_to 'Show', booking %></td>
    	<td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    	<td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
		</tr>
		<% end %>
	</tbody>
</table>
