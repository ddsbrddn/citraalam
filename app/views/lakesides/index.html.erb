<p id="notice"><%= notice %></p>

<h1>Lakesides</h1>

<%= month_calendar events: @lakesides do |date, lakesides| %>
  <%= date %>

  <% lakesides.each do |lakeside| %>
    <div>
      <%= link_to lakeside.organization, lakeside %>
    </div>
  <% end %>
<% end %>


<p>

<h2>Booking</h2>
<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Unit</th>
      <th>Packet</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer.organization %></td>
        <td><%= booking.unit %></td>
        <td><%= booking.packet %></td>
        <td><%= booking.start_time %></td>
        <td><%= booking.end_time %></td>
        <td><%= booking.status %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</p>


<br>


